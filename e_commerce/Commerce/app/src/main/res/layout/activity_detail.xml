<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/descLayout"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txtIdProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creator Name"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/txtLibelleProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Libelle"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txtDescProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desc"
                android:textColor="@color/black"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txtLikesProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/txtPrixProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prix : "
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/txtSoldeProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solde"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/black"
                    android:visibility="invisible"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/layout_panier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/btnpanier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/iconpanier"
                    />
                <TextView
                    android:id="@+id/panierqte"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:hint="qte"
                    android:layout_toRightOf="@id/btnpanier"
                    android:layout_marginLeft="30dp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/btnprev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconmoins"
                    android:layout_toRightOf="@id/panierqte"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/btnnext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconplus"
                    android:layout_toRightOf="@id/btnprev"
                    android:padding="10dp"
                    />
            </RelativeLayout>

            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scroll"
                android:layout_below="@id/descLayout"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_viewComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                >
                <EditText
                    android:id="@+id/edtcmt"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="comment"/>
                <Button
                    android:id="@+id/btncmt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:drawableLeft="@drawable/chat1"
                    />
            </LinearLayout>

</RelativeLayout>