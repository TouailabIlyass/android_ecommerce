<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtIdProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creator Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txtLibelleProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Libelle"
            android:layout_toRightOf="@id/image_view"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/txtDescProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desc"
            android:layout_toRightOf="@id/txtLibelleProd"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/txtIdFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/txtFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Four"
            android:visibility="gone"
            />
            <TextView
                android:id="@+id/txtPrixProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix : "
                android:layout_below="@id/txtLibelleProd"
                android:layout_toRightOf="@id/image_view"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                />
            <TextView
                android:id="@+id/txtSoldeProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solde :"
                android:layout_marginLeft="10dp"
                android:visibility="invisible"
                android:layout_below="@id/txtLibelleProd"
                android:layout_toRightOf="@id/txtPrixProd"
                android:layout_centerVertical="true"
                />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/txtlikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:id="@+id/btnNlikes"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/nheart" />
            <TextView
                android:id="@+id/btnlikes"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/heart"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txtcmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:drawableRight="@drawable/chat1"
                />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>