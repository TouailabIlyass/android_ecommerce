<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/image_view_panier"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtIdProd_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creator Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txtLibelleProd_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Libelle"
            android:layout_toRightOf="@id/image_view_panier"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/txtDescProd_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desc"
            android:layout_toRightOf="@id/txtLibelleProd_panier"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/txtIdFour_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/txtFour_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Four"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/txtPrixProd_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix : "
            android:layout_below="@id/txtLibelleProd_panier"
            android:layout_toRightOf="@id/image_view_panier"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/txtSoldeProd_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solde :"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:layout_below="@id/txtLibelleProd_panier"
            android:layout_toRightOf="@id/txtPrixProd_panier"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/txtqte_panier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X 1"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/txtLibelleProd_panier"
            android:layout_alignParentRight="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_panier"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txtstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="en cours de livraison"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>